---
import { TITLE } from "../constants";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SOCIAL_LINKS } from "../constants/socials";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{TITLE}</title>
  </head>
  <body>
    <Header
      routes={[
        { url: "#", text: "Home" },
        { url: "#projects", text: "Projects" },
        { url: "#contact", text: "Contact" },
      ]}
    />
    <main>
      <slot />
    </main>
    <Footer
      sections={[
        {
          name: "More repositories",
          links: [
            { text: "Jkutkut", url: "https://github.com/jkutkut" },
            { text: "JkutkutOrg", url: "https://github.com/jkutkutOrg" },
            {
              text: "JkutkutArchive",
              url: "https://github.com/jkutkutArchive",
            },
          ],
        },
        {
          name: "Say hi",
          links: [
            { text: "LinkedIn", url: "https://linkedin.com/in/jkutkut" },
            {
              text: "jorgeregonzalezwork@gmail.com",
              url: "mailto:jorgeregonzalezwork@gmail.com",
            },
          ],
        },
      ]}
      socials={SOCIAL_LINKS}
    />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
