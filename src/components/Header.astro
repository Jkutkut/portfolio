---
import { TITLE } from "../constants";
import type { Link } from "../types";
import LinkBtn from "./LinkBtn.astro";

const routes: Link[] = Astro.props.routes || [];
---
<header>
    <div class="logo">
        <LinkBtn link={{ text: TITLE, url: '/' }} />
    </div>
    <nav>
        <ul>
            {routes.map((route) => (
                <li>
                    <LinkBtn link={route} />
                </li>
            ))}
        </ul>
    </nav>
</header>

<style>
header {
    position: fixed;
    top: 0;
    width: 100%;

    display: flex;
    flex-direction: row;
    align-items: center;

    border-bottom: 1px solid #000000;
}
header > .logo {
    margin: 1rem;
}
.logo {
    padding: 1rem;
}
nav {
    width: 100%;
    height: 100%;
    gap: 1rem;
    display: flex;
}
nav > ul {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    padding: 0;
    gap: 1rem;
}
li {
    list-style: none;
}
</style>
