---
import { TITLE } from "../constants";

interface Route {
    path: string;
    title: string;
}

const routes: Route[] = Astro.props.routes || [];
---

<header>
    <div class="logo">
        <a href="/">
            {TITLE}
        </a>
    </div>
    <nav>
        <ul>
            {routes.map((route) => (
                <li>
                    <a href={route.path}>
                        {route.title}
                    </a>
                </li>
            ))}
        </ul>
    </nav>
</header>

<style>
header {
    position: sticky;
    top: 0;

    display: flex;
    flex-direction: row;
    align-items: center;

    border-bottom: 1px solid #dee2e6;
}
header > .logo {
    margin: 1rem;
}
nav {
    width: 100%;
    height: 100%;
    gap: 1rem;
    display: flex;
}
nav > ul {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    padding: 0;
}
li {
    list-style: none;
}
a {
    text-decoration: none;
    color: #000;
    padding: 1rem;
}
</style>
