---
import { LinkTarget, type Link } from "../data/types";

type Props = {
    link: Link;
    target?: LinkTarget;
    rel?: string;
    classes?: string[];
};

const {
    link,
    target = LinkTarget.Blank,
    rel = 'noopener noreferrer',
    classes = [],
} = Astro.props;

const { text, url: href } = link;
const slotHasContent = !!Astro.slots.default;
---
<a
    href={href} target={target}
    rel={rel}
    class={classes.length ? classes.join(' ') : undefined}
    title={text}
>
    {slotHasContent ? <slot /> : text}
</a>
<style>
a {
    color: #000;
    text-decoration: none;
}
a:hover {
    text-decoration: underline;
}

.btn {
    padding: 0.75rem 1.5rem;
    border-radius: 0.375rem;
    text-decoration: none;
    font-weight: bold;
}
.btn.btn-primary {
    color: white;
    background: #007bff;
}
.btn.btn-secondary {
    color: white;
    background: #6c757d;
}
</style>
