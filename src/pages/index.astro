---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import MdSection from "../components/MdSection.astro";
import Projects from "../components/Projects.astro";
import Contact from "../components/Contact.astro";

import { SOCIAL_LINKS } from "../constants/socials";
import * as aboutMe from '../constants/aboutMe.md';
import { HERO_TITLE, HERO_DESCRIPTION } from "../constants";
---

<Layout>
  <Hero
    title={HERO_TITLE}
    description={HERO_DESCRIPTION}
    links={[
      { url: "/#projects", text: "View my work", linkType: "primary" },
      { url: "/#contact", text: "Get in touch", linkType: "secondary" },
    ]}
    socials={SOCIAL_LINKS}
  />
  <MdSection id="about-me" content={aboutMe} />
  <Projects />
  <Contact contacts={SOCIAL_LINKS}/>
</Layout>
